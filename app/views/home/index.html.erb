<h2>Receitas Favoritadas</h2>
<% @favorites.each do |recipe| %>
  <p><%= link_to recipe.name, recipe %></p>
  <p><strong>Kitchen:</strong> <%= recipe.kitchen.name %></p>
  <p><strong>Food type:</strong> <%= recipe.food_type.name%></p>
  <p><strong>Preference:</strong> <%= recipe.preference.title %></p>
  <p><strong>Difficulty:</strong> <%= recipe.difficulty %></p>
<% end  %>

<h2> Receitas adicionadas recentemente</h2>
<% @recipes.each do |recipe| %>
  <p><%= link_to recipe.name, recipe %></p>
  <p><strong>Kitchen:</strong> <%= recipe.kitchen.name %></p>
  <p><strong>Food type:</strong> <%= recipe.food_type.name%></p>
  <p><strong>Preference:</strong> <%= recipe.preference.title %></p>
  <p><strong>Difficulty:</strong> <%= recipe.difficulty %></p>
<% end  %>

<aside>
  <% @kitchens.each do |kitchen| %>
    <%= link_to kitchen.name, kitchen_path(kitchen) %>
  <% end %>

  <% @food_types.each do |food_type| %>
    <%= link_to food_type.name, food_type_path(food_type) %>
  <% end %>

  <% @preferences.each do |preference| %>
    <%= link_to preference.title, preference_path(preference) %>
  <% end %>
</aside>
